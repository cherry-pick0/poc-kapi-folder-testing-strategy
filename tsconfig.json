{
  "compilerOptions": {
    "rootDirs": [""],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest", "mocha", "supertest"],
    "skipLibCheck": true,
    "strict": true
  },
  "paths": {
    "@src/*": ["./src/*"]
  },
  "exclude": ["node_modules"],
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs"
    }
  },
}
